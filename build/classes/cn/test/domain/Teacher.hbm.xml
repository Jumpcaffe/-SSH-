<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping>
  <class name="cn.test.domain.Teacher" table="teacher">
     <id name="tid" column="tid">
       <generator class="native"/>
     </id>
      <property name="tnumber" column="tnumber" length="20"/>
      <property name="tname" column="tname" length="20"/>
      <property name="tsex" column="tsex"/>
      <property name="tpassword" column="tpassword" length="20"/>
      <property name="tcollege" column="tcollege" length="20"/>
   </class>
</hibernate-mapping>